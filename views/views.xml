<odoo>
  <data>
    <!-- explicit list view definition -->

    <!-- Definimos como es la vista explicita de la lista-->
    <record model="ir.ui.view" id="lista_tareas">
      <field name="name">Lista de tareas aruedia202</field>
      <field name="model">lista_tareas.lista</field>
      <field name="arch" type="xml">
        <tree>
          <field name="titulo"/>
          <field name="prioridad"/>
          <field name="urgente"/>
          <field name="realizada"/>
	  <field name="descripcion"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->
    <!-- Acciones al abrir las vistas en los modelos 
    https://www.odoo.com/documentation/16.0/developer/reference/addons/actions.html
    -->

    <record model="ir.actions.act_window" id="lista_tareas_action_window">
      <field name="name">Listado de aruedia202</field>
      <field name="res_model">lista_tareas.lista</field>
      <field name="view_mode">tree,form</field>
    </record>

<!-- Vista de las kanban usando las tareas de "project" (ya existente en Odoo)-->
    <record id="tareas_kanban_view" model="ir.ui.view">
        <field name="name">Lista de tareas aruedia202</field>
        <field name="model">lista_tareas.kanban</field>
        <field name="arch" type="xml">
            <!-- Agrupamos por el atributo "stage id"-->
            <kanban default_group_by="stage_id">
                <field name="stage_id" />
                <field name="name" />
                <!-- Plantilla QWeb para indicar como es la tarjeta Kanban-->
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <field name="name" />
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id='action_tareas_kanban' model='ir.actions.act_window'>
        <field name="name">Listado de tareas Kanban</field>
        <field name="res_model">lista_tareas.kanban</field>
        <field name="view_mode">kanban,tree,form</field>
        <!-- Indicamos como contexto que la vista de referencia es la vista tareas_kanban_view.
        mas informaciÃ³n en https://www.odoo.com/documentation/15.0/developer/reference/backend/views.html 
        -->
        <field name="context">{'kanban_view_ref': 'my_project.tareas_kanban_view'}</field>
    </record>

    <!-- Top menu item -->

    <menuitem name="Listado de tareas" id="lista_tareas_menu_root"/>

    <!-- menu categories -->

    <menuitem name="Lista Tareas" id="lista_tareas_menu_1" parent="lista_tareas_menu_root"/>

    <!-- actions -->

    <menuitem name="Listar Tareas" id="lista_tareas_menu_1_list" parent="lista_tareas_menu_1"
              action="lista_tareas_action_window"/>

  </data>
</odoo>
